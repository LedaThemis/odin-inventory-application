<h1>Create Category</h1>
<form class="form" method="POST">
  <div class="form-group">
    <label for="name">Name:</label>
    <input id="name" name="name" type="text" placeholder="Name of category" required="true" value="<%= category===undefined ? '' : category.name %>">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <input id="description" name="description" type="text" placeholder="Description of category" required="true" value="<%= category===undefined ? '' : category.description %>">
  </div>
  <button type="submit" class="submit-button">Create Category</button>
</form>

<% if (errors !== undefined) { %>
<div class="errors">
  <ul>
    <% for (let i in errors) { %>
    <li class="error">- <%= errors[i].msg %></li>
    <% } %>
  </ul>
</div>
<% } %>